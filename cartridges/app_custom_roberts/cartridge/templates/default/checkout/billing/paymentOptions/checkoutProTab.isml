                        <div class="inner-circle d-none"
                            style="background: #0a3356;border-radius: 50%;height: 13px;width: 13px;position: absolute;top: 50%;left: 50%;transform: translate(-50%, -50%)">
                        </div>
                    </div>
                </div>
                <div class="label-payment">
                    <span class="form-check-label" for="inlineRadio3">Mercado pago </span>
                </div>
            </div>
            <img class="checkout-pro-option" src="${URLUtils.staticURL('/images/payment-mercado-pago.png')}" height="32"
                alt="${paymentOption.name}" title="${paymentOption.name}" />
        </div>
    </a>
</div>

